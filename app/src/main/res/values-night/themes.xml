<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookListing" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ffe082</item>
        <item name="colorSecondaryVariant">#ffe082</item>
        <item name="colorOnSecondary">#eceff1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/darkThemeSurfaceColor</item>
        <item name="colorSurface">@color/darkThemeSurfaceColor</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffd54f</item>
    </style>

    <style name="largeTextTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#cfd8dc</item>
    </style>

    <style name="smallTextTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#bcbcbc</item>
    </style>

</resources>